<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/anim_start</item>
        <item name="android:windowExitAnimation">@anim/anim_dismiss</item>
    </style>

    <style name="MaterialEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/title_and_main_text</item>
        <item name="android:textColorHint">@color/straight_matter_and_secondary_text</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
    </style>

    <style name="auto_edit_text_2" parent="MaterialEditText">
        <item name="android:background">@drawable/bg_auto_edit_text_v2</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_up</item>
        <item name="android:windowExitAnimation">@anim/menu_down</item>
    </style>

</resources>
