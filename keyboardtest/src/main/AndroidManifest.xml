<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ryanh.keyboardtest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".platenumber.BaseApplication">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".dialog.DialogActivity" />

        <activity android:name=".edittext.EditTextActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"/>

        <activity android:name=".platenumber.PlateNumberActivity" />


    </application>


</manifest>